{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "vite/client"],
    "lib": ["ESNext", "DOM"],
    "plugins": [{ "name": "@astrojs/ts-plugin" }]
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.cjs",
    "./src/**/*.mjs",
    "./src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.cts",
    "./src/**/*.mts",
    "./src/**/*.tsx",
    "./src/**/*.astro"
  ],
  "exclude": ["node_modules", "**/__tests__/*"]
}
